<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08E700"
    tools:context="com.example.aakash.smartrefer.ragForm">

    <EditText
        android:id="@+id/Rname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Rno"></EditText>

    <EditText
        android:id="@+id/Rarea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Rname"
        android:layout_marginTop="92dp"
        android:hint="Area"
        android:inputType="text"
        tools:layout_editor_absoluteX="-115dp"
        tools:layout_editor_absoluteY="74dp"></EditText>

    <EditText
        android:id="@+id/Rno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="17dp"
        android:hint="Mobile No."
        android:inputType="text"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp"></EditText>

    <EditText
        android:id="@+id/RotherInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ragSubmit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:hint="Other Information"
        android:inputType="textMultiLine"
        android:lines="5"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="222dp"></EditText>

    <Button
        android:id="@+id/ragSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#08F730"
        android:onClick="invokeLogin"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RotherInfo"
        android:layout_alignParentStart="true"
        android:text="About Yourself"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Rarea"
        android:layout_marginTop="77dp"
        android:text="Mobile Number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Rarea"
        android:layout_marginBottom="38dp"
        android:text="Area"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Rarea"
        android:layout_marginBottom="34dp"
        android:text="Name"
        android:textSize="20sp" />

</RelativeLayout>
